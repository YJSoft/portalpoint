<query id="insertLog" action="insert">
    <tables>
        <table name="portalpoint" />
    </tables>
    <columns>
        <column name="log_srl" var="log_srl" filter="number" notnull="notnull" />
        <column name="title" var="title" notnull="notnull" />
        <column name="member_srl" var="member_srl" notnull="notnull" filter="number" />
        <column name="point" var="point" filter="number" />
        <column name="url" var="url" notnull="notnull" />
        <column name="ipaddress" var="ipaddress" default="ipaddress()" />
        <column name="regdate" var="regdate" default="curdate()" />
    </columns>
</query>